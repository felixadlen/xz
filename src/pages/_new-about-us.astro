  <script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
  const title = document.getElementById("title");
  const subheader = document.getElementById("title-subheader");
  const video = document.getElementById('introVideo');
  let initialScrollYWhenOpaque = null;

  window.addEventListener("scroll", () => {
    const scrollY = window.scrollY;
    
    // Configurations for h1 and h3
    const maxFontSizeTitle = 10; // Maximum font size for h1
    const minFontSizeTitle = 6; // Starting font size for h1
    const maxFontScrollTitle = 200; // Scroll length over which font size increases for h1

    // Configurations for h3
    const maxFontSizeSubheader = 2.5; // Maximum font size for h3
    const minFontSizeSubheader = 1.5; // Starting font size for h3
    const maxFontScrollSubheader = 100; // Scroll length over which font size increases for h3

    // Font size adjustment for h1
    let fontSizeTitle = minFontSizeTitle + (scrollY / maxFontScrollTitle) * (maxFontSizeTitle - minFontSizeTitle);
    fontSizeTitle = Math.min(fontSizeTitle, maxFontSizeTitle);
    title.style.fontSize = `${fontSizeTitle}rem`;

    // Font size adjustment for h3
    let fontSizeSubheader = minFontSizeSubheader + (scrollY / maxFontScrollSubheader) * (maxFontSizeSubheader - minFontSizeSubheader);
    fontSizeSubheader = Math.min(fontSizeSubheader, maxFontSizeSubheader);
    subheader.style.fontSize = `${fontSizeSubheader}rem`;

    // Opacity logic for h1
    let opacityTitle = 1;
    if (fontSizeTitle > 7) {
      opacityTitle = 1 - ((fontSizeTitle - 7) / (maxFontSizeTitle - 7));
    }
    title.style.opacity = Math.max(opacityTitle, 0).toFixed(2);

    // Opacity logic for h3, mirroring h1
    let opacitySubheader = 1;
    if (fontSizeSubheader > 2) { // Adjusted to fit h3's scale
      opacitySubheader = 1 - ((fontSizeSubheader - 1) / (maxFontSizeSubheader - 1));
    }
    subheader.style.opacity = Math.max(opacitySubheader, 0).toFixed(2);

    // Video translation trigger
    if (title.style.opacity === '0') {
      if (initialScrollYWhenOpaque === null) {
        initialScrollYWhenOpaque = scrollY;
      }
      if (scrollY - initialScrollYWhenOpaque >= 100) {
        video.classList.add('video-absolute');
      }
    } else {
      initialScrollYWhenOpaque = null;
      video.classList.remove('video-absolute');
    }

    // Visibility adjustments
    title.style.visibility = (fontSizeTitle >= maxFontSizeTitle) ? 'hidden' : 'visible';
  });
});

  </script>
  

