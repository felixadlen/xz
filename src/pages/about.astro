    <script>
document.addEventListener('DOMContentLoaded', () => {
    const morphXZ = document.querySelector('#morph-xz');
    let hasAnimated = false;

    const observer = new IntersectionObserver((entries, observer) => {
        entries.forEach(entry => {
            if (entry.isIntersecting && !hasAnimated) {
                animateMorphXZ();
                hasAnimated = true;
                observer.unobserve(morphXZ); // Optional: Stop observing after animation
            }
        });
    }, { threshold: 0.5 }); // Adjust threshold as needed

    observer.observe(morphXZ);

    function animateMorphXZ() {
    const spans = document.querySelectorAll('#morph-xz span');
    let xSpan, zSpan;

    spans.forEach(el => {
        const letter = el.textContent.toUpperCase();
        if (letter === 'X') xSpan = el;
        if (letter === 'Z') zSpan = el;
        if (!['X', 'Z'].includes(letter)) {
            el.classList.add('hide');
        }
    });

    // Wait for the other letters to fade out
    setTimeout(() => {
        const container = document.getElementById('morph-xz');
        const containerWidth = container.clientWidth;
        const xRect = xSpan.getBoundingClientRect();
        const zRect = zSpan.getBoundingClientRect();

        let xMove, zMove;

        if (window.innerWidth < 768) {
            // Align to the left for mobile
            xMove = -xRect.left + container.offsetLeft;
            zMove = -zRect.left + xRect.width + container.offsetLeft;
        } else {
            // Center alignment for desktop
            const combinedWidth = xRect.width + zRect.width;
            const spaceBetween = (containerWidth - combinedWidth) / 2;

            const xCenterPosition = spaceBetween;
            const zCenterPosition = spaceBetween + xRect.width;

            xMove = xCenterPosition - xRect.left + container.offsetLeft;
            zMove = zCenterPosition - zRect.left + container.offsetLeft;
        }

        xSpan.style.transform = `translateX(${xMove}px)`;
        zSpan.style.transform = `translateX(${zMove}px)`;
    }, 1800);
}


});

    </script>


