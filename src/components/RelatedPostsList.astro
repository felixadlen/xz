---
import RelatedPosts from "./RelatedPosts.astro";

const { posts, currentPostUrl } = Astro.props; 
---




<h2 class="more-stories-header">
More stories</h2>


<ul class="related-posts-list">
  {posts.filter(post => post.url !== currentPostUrl).map(post => (
    <li key={post.url}>
      <RelatedPosts post={post} />
    </li>
  ))}
</ul>

<style>
  .more-stories-header {
   text-align: center;
   padding-top: 2rem;
   margin-top: 4rem;
   background-color: #e0e0e0;
   box-shadow: 0px -4px 50px rgba(0, 0, 0, 0.12);
  }
  ul {
    background-color: #e0e0e0;
    margin: 0 0 4rem 0;
    list-style: none;
    
    padding: 2rem 2rem;
    justify-content: center;
    display: flex;
    flex-wrap: wrap;
    border-radius: 15px;
    flex-direction: row;
    gap: 1rem;
  }
  @media (min-width: 768px) {
    ul {
      margin: 0rem 0 0 0;
      padding: 4rem 2rem;
      gap: 3rem;

    }
    
  }

  .related-posts-list li {
  display: none; /* Hide all items by default */
}

.related-posts-list li:nth-child(-n+3) {
  display: block; /* Show only the first 3 items */
}
</style>
